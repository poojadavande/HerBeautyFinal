<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppoinmentActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/girl_icon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill The Form"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold|normal"
        android:fontFamily="sans-serif-black"
        android:layout_marginLeft="@dimen/_45sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Your Appoinment"
        android:textColor="@color/pink"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold|normal"
        android:fontFamily="sans-serif-black"
        android:layout_marginLeft="@dimen/_45sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_25sdp">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:outlineAmbientShadowColor="@color/white"
        android:layout_marginBottom="@dimen/_20sdp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Name"
            android:id="@+id/name_id"
            android:layout_marginLeft="@dimen/_16sdp"
            android:inputType="text"/>

    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            android:outlineAmbientShadowColor="@color/white"
            android:layout_marginBottom="@dimen/_15sdp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter 10 Dig. Mobile Number"
                android:id="@+id/mobile_id"
                android:layout_marginLeft="@dimen/_16sdp"
                android:inputType="number"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            android:outlineAmbientShadowColor="@color/white"
            android:layout_marginBottom="@dimen/_15sdp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Email"
                android:id="@+id/email_id"
                android:layout_marginLeft="@dimen/_16sdp"
                android:inputType="text"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            android:outlineAmbientShadowColor="@color/white"
            android:layout_marginBottom="@dimen/_15sdp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Service Name"
                android:id="@+id/service_id"
                android:layout_marginLeft="@dimen/_16sdp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            android:outlineAmbientShadowColor="@color/white"
            android:layout_marginBottom="@dimen/_15sdp">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Date"
                android:id="@+id/date_id"
                android:layout_marginLeft="@dimen/_16sdp"
                android:inputType="number|date"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            android:outlineAmbientShadowColor="@color/white"
            android:layout_marginBottom="@dimen/_15sdp">


        </androidx.cardview.widget.CardView>


    </LinearLayout>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM"
            android:textColor="@color/white"
            android:id="@+id/send_whatsapp_btn"
            android:layout_gravity="center"
            android:background="@drawable/buttoncurve"
            android:backgroundTint="@color/pink"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textSize="16dp"/>



    </LinearLayout>

</ScrollView>
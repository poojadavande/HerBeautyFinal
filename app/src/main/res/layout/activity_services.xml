<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicesActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OUR SERVICES 🎖️"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold|normal"
        android:textSize="@dimen/_22sdp"
        android:textColor="@color/pink"
        android:gravity="center"
        android:layout_marginTop="@dimen/_40sdp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_235sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardBackgroundColor="@color/lite_pink"
        android:outlineSpotShadowColor="@color/lite_pink"
        android:layout_gravity="center"
        android:id="@+id/crd_hairstyle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hair Styles 👱‍♀️"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:backgroundTint="@color/white"
            android:textSize="@dimen/_22sdp"
            android:gravity="center"
            android:fontFamily="sans-serif-black"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_235sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_25sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardBackgroundColor="@color/lite_pink"
        android:outlineSpotShadowColor="@color/lite_pink"
        android:layout_gravity="center"
        android:id="@+id/crd_skincare">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Skin Care 👌"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:textSize="@dimen/_22sdp"
            android:gravity="center"
            android:fontFamily="sans-serif-black"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_235sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_25sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardBackgroundColor="@color/lite_pink"
        android:outlineSpotShadowColor="@color/lite_pink"
        android:layout_gravity="center"
        android:id="@+id/crd_makeupart">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Makeup Art 💄"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:backgroundTint="@color/white"
            android:textSize="@dimen/_22sdp"
            android:gravity="center"
            android:fontFamily="sans-serif-black"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_235sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_25sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardBackgroundColor="@color/lite_pink"
        android:outlineSpotShadowColor="@color/lite_pink"
        android:layout_gravity="center"
        android:id="@+id/crd_nailart">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nails Art 💅"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:textSize="@dimen/_22sdp"
            android:gravity="center"
            android:fontFamily="sans-serif-black"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_235sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_25sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardBackgroundColor="@color/lite_pink"
        android:outlineSpotShadowColor="@color/lite_pink"
        android:layout_gravity="center"
        android:id="@+id/crd_bodycare">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Body Care 🤞"
            android:textColor="@color/purple"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogSigActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_340sdp"
        android:layout_gravity="center"
        android:outlineAmbientShadowColor="@color/lite_pink"
        app:cardBackgroundColor="@color/lite_pink"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp">

        <ImageView
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_gravity="center"
            android:src="@drawable/girl_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Just Spread The Magic Of Beauty..! 👀💝"
            android:layout_marginTop="@dimen/_250sdp"
            android:textColor="@color/bgblue"
            android:textSize="@dimen/_17sdp"
            android:gravity="center"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG IN"
            android:textColor="@color/white"
            android:id="@+id/btn_login_first"
            android:background="@drawable/buttoncurve"
            android:backgroundTint="@color/pink"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_55sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textSize="@dimen/_12sdp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:id="@+id/btn_signup_first"
            android:background="@drawable/buttoncurve"
            android:backgroundTint="@color/pink"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textSize="@dimen/_12sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SKIP"
        android:textColor="@color/white"
        android:id="@+id/btn_skip"
        android:background="@drawable/buttoncurve"
        android:backgroundTint="@color/pink"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"/>
    </LinearLayout>

</LinearLayout>
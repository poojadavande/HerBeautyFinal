<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BodyCareActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Body Care"
            android:textColor="@color/pink"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold|normal" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:outlineSpotShadowColor="@color/white"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Body Spa"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold|normal"
                android:layout_marginLeft="@dimen/_110sdp"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="@dimen/_10sdp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bodypic1"
                android:id="@+id/body1"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:outlineSpotShadowColor="@color/white"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Body Polishing"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold|normal"
                android:layout_marginLeft="@dimen/_110sdp"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="@dimen/_10sdp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bodypic2"
                android:id="@+id/body2"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:outlineSpotShadowColor="@color/white"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Body Steam"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold|normal"
                android:layout_marginLeft="@dimen/_110sdp"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="@dimen/_10sdp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bodypic3"
                android:id="@+id/body3"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:outlineSpotShadowColor="@color/white"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Body Wax"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold|normal"
                android:layout_marginLeft="@dimen/_110sdp"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="@dimen/_10sdp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bodypic4"
                android:id="@+id/body4"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeupartActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MakeUp Art"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold|normal"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/pink"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"/>


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:outlineSpotShadowColor="@color/white"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bridal Makeup"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold|normal"
                android:layout_marginLeft="@dimen/_110sdp"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="@dimen/_10sdp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/makeuppic1"
                android:id="@+id/makeup1"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:outlineSpotShadowColor="@color/white"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3D Makeup"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold|normal"
                android:layout_marginLeft="@dimen/_110sdp"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="@dimen/_10sdp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/makeuppic2"
                android:id="@+id/makeup2"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:outlineSpotShadowColor="@color/white"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HD Makeup"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold|normal"
                android:layout_marginLeft="@dimen/_110sdp"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="@dimen/_10sdp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/makeuppic3"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/makeup3"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:outlineSpotShadowColor="@color/white"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waterproof Makeup"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold|normal"
                android:layout_marginLeft="@dimen/_110sdp"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="@dimen/_10sdp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/makeuppic4"
                android:id="@+id/makeup4"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>